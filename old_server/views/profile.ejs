<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="/css/profile.css">
    <title>Profile</title>
</head>

<body>

    <% if(requestedUser) {%>
        <%- include('./partials/sidebar') %>

        <div class="main-content">

            <div class="profile-edit-container">
                <form action="/update-profile" method="get">
                    <!-- profile picture of a user -->
                    <div class="rounded-picture">
                        <div class="pic">
                            <div class="user-icon">
                                <img src="\images\default_user_pic.png">
                            </div>
                        </div>
                        
                        <div class="buttons">
                            <button type="submit" class="btn save-button">Connect</button>
    
                            <i style="margin: 20px;" class="fa-regular fa-pen-to-square"></i>
                            
                        </div>
                    </div>
                    <div class="left">
                        <div class="form-group">
                            <h3 class="user-name"> <%= requestedUser.username %> </h3>
                        </div>
        
                        <div class="form-group">
                            <label for="name"><i class="fa-regular fa-envelope"></i>
                               <%= requestedUser.email %> </label>
                        </div>
                        <div class="form-group connections">
                            <span>11</span> Connections
                        </div>
        
                        <div class="form-group">
                            <label for="skills">Skills:</label>
                            
                            <div class="collection">  
                                <% requestedUser.skills.forEach(skill=> { %>
                                    <div class="chip"> <%= skill %> </div>
                                    </div>
                                    <% }); %>
                            </div>
                        </div>
        
                        <div class="form-group">
                            <label for="skills">Interests:</label>
                            <div class="collection">  
                                <% requestedUser.interests.forEach(interest=> { %>
                                    <div class="chip"> <%= interest %> </div>
                                    </div>
                                    <% }); %>
                            </div>
                        </div>
                    </div>
                    
        
                    <!-- Other profile information -->
                    <!-- ... (your existing form fields) ... -->
                </form>
            </div>
           
        </div>
        <% } else { %>
            <p>No such user Exists</p>
            <% } %>


            <%- include('./partials/footer') %>

        