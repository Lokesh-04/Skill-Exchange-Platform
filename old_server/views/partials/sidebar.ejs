<div class="sidebar-left">
  <!-- Left Sidebar Content -->

  <div class="items">
      <div class="brand">
          <h3>Skill Xchange</h3>
      </div>

      <div class="menu">
          <!-- Add Home, Chat, and Settings buttons without dropdown -->
          <form action="/home" method="get">
              <div id="home" class="menu-item">
                  <button class="btn btn-secondary sidebar-button"><i
                          class="fa-solid fa-house fa-fw"></i>Home</button>
              </div>
          </form>

          <form action="/chat" method="get">
              <div id="messages" class="menu-item">
                  <button class="btn btn-secondary sidebar-button"><i
                          class="fa-solid fa-message"></i>Messages</button>
              </div>
          </form>

          <form action="/playgrounds" method="get">
              <div id="playground" class="menu-item">
                  <button class="btn btn-secondary sidebar-button"><i class="fa-solid fa-puzzle-piece"></i>PlayGrounds</button>
              </div>
          </form>
      </div>

      <div class="dropup-container dropup-center dropup">
          <button class="btn btn-secondary profile-button" type="button" data-bs-toggle="dropdown"
              aria-expanded="false">
              <div class="profile-group">

                  <div class="details">
                      <div class="profile-pic">
                          <img src="/images/default_user_pic.png" alt="profile">
                      </div>
                      <div class="username">
                          <%= currentUser.username %>
                      </div>
                  </div>

                  <div class="three-dots">
                      <i class="fa-solid fa-ellipsis"></i>
                  </div>
              </div>
          </button>
          <ul class="dropdown-menu profile-menu">
              <li><a class="dropdown-item profile-menu-item"
                      href="/profile/<%= currentUser.username %>">Profile</a></li>
              <li><a class="dropdown-item profile-menu-item" href="/logout">Logout</a></li>
          </ul>
      </div>

  </div>

</div>

<script>
let items = document.getElementsByClassName("sidebar-button");
for (var i = 0; i < items.length; i++) {
  items[i].addEventListener("click", function() {
  let current = document.getElementsByClassName("active");
  current[0].className = current[0].className.replace(" active", "");
  this.className += " active";
  });
}
</script>